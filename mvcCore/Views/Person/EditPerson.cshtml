@model mvcCore.Models.Domain.Person


@{

    // Layout = "_Layout";
}
<div class="mt-2" style="width 50%">

    <form asp-action="EditPerson">
        <h2>Edit Person </h2>
        <input asp-for="Id" value="@Model.Id" type="hidden" class="form-label" />
        <div class="form-group">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" type="text" class="form-control">
            <span class="text-danger " asp-validation-for="Name"> </span>

        </div>
        <div class="form-group">
            <label asp-for="Email" class=" form-label">Email</label>
            <input asp-for="Email" type="text" class="form-control">
            <span class="text-danger " asp-validation-for="Email"> </span>
        </div>

        @if (TempData["msg"] != null)
        {
            @TempData["msg"]
            ;
        }

        <button type="submit" class="btn btn-primary">Update</button>
        <a href="@Url.Action("DisplayPeople","Person")" class="btn btn-primary">Back </a>
    </form>


</div>